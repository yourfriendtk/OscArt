<script type="text/javascript">

var angle = 0;
var angleVel = 0.1;
var r1;

var angle2 = 0;
var angleVel2 = 0.1;
var r2;
var bgState = true;
var c = 255;

var cnv;

function setup() {
	cnv = createCanvas(window.innerWidth, 400);
	// cnv.position(window.innerWidth/2 - 600, window.innerHeight/2 - 200);
  	// createCanvas(1200, 400);
  	// canvas.position(width/2, height/2);
  	r1 = random(100);
  	r2 = random(100);

  	// colorMode(HSB);
  	background(c);
  	//stroke(0);
  	strokeWeight(2);
  	noFill();
      
}

function draw() {
	cnv.style('width:'+window.innerWidth+'px; height: AUTO;');
	// cnv.style('width:'+window.innerWidth+'px; height:' +window.innerHeight+ 'px;');
  	wave();
  	text();

}


function wave() {
  	stroke(0);
  	//  ellipse(0, 1200, 100, 400);
  	beginShape();
  	for (var x = 0; x <= window.innerWidth + 300; x += r1) {
    	var y = map(sin(angle), -1, 1, 0, 400);
    	vertex(x, y);
    	angle +=angleVel;
  	} 
  	endShape();

  	stroke(255);
  	beginShape();
  	for (var x = 0; x <= window.innerWidth + 300 * 2; x += r2) {
    	var y = map(sin(angle2), -1, 1, 0, 400);
    	vertex(x, y);
    	angle2 +=angleVel2;
  	} 
  	endShape();

}

