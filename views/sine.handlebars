}

document.body.onkeydown=function(e){
	if(e.keyCode == 38 && r1 < 100) { 
    	// background(c);
      	r1+=1;
    }
    if(e.keyCode == 40 && r1 > 1) { 
		// background(c);
      	r1-=1; 
    }
    if(e.keyCode == 39 && r2 < 100) { 
      	// background(c);
      	r2+=1; 
    }
    if(e.keyCode == 37 && r2 > 1) { 
      	// background(c);
      	r2-=1; 
    }
      
    console.log(e.keyCode);      
    console.log(r1 + " " + r2);
}    

</script>
